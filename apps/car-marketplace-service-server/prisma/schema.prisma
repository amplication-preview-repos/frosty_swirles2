datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Car {
  createdAt   DateTime  @default(now())
  description String?
  id          String    @id @default(cuid())
  listings    Listing[]
  make        String?
  model       String?
  price       Float?
  updatedAt   DateTime  @updatedAt
  user        User?     @relation(fields: [userId], references: [id])
  userId      String?
  year        Int?
}

model Purchase {
  createdAt    DateTime  @default(now())
  id           String    @id @default(cuid())
  listing      Listing?  @relation(fields: [listingId], references: [id])
  listingId    String?
  purchaseDate DateTime?
  updatedAt    DateTime  @updatedAt
  user         User?     @relation(fields: [userId], references: [id])
  userId       String?
}

model Listing {
  car         Car?       @relation(fields: [carId], references: [id])
  carId       String?
  createdAt   DateTime   @default(now())
  description String?
  id          String     @id @default(cuid())
  price       Float?
  purchases   Purchase[]
  title       String?
  updatedAt   DateTime   @updatedAt
  user        User?      @relation(fields: [userId], references: [id])
  userId      String?
}

model User {
  cars      Car[]
  createdAt DateTime   @default(now())
  email     String?    @unique
  firstName String?
  id        String     @id @default(cuid())
  lastName  String?
  listings  Listing[]
  password  String
  purchases Purchase[]
  roles     Json
  updatedAt DateTime   @updatedAt
  username  String     @unique
}
